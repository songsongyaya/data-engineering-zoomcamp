docker run -it \
    -e POSTGRES_USER="root" \
    -e POSTGRES_PASSWORD="root" \
    -e POSTGRES_DB="ny_taxi" \
    -v $(pwd)/ny_taxi_postgres_data:/var/lib/postgresql/data \
    -p 5432:5432 \
    postgres:13


# docker run -v <volume_name>:/var/lib/postgresql/data
# docker needs full path
# ny_taxi_postgres_data is a named volume created by Docker on your PC
# /var/lib/postgresql/data is where Postgres stores its database (file system)
# this setup makes usre your data survive container deletion
